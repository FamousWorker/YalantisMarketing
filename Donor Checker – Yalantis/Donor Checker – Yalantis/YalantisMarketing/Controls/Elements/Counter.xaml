<UserControl x:Class="YalantisMarketing.Controls.Elements.Counter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" >
    <StackPanel Orientation="Vertical">
        <Label x:Name="Counter_content_label" ></Label>
        <StackPanel Orientation="Horizontal" Style="{StaticResource Element_base_style}" MinWidth="35">
            <TextBox  x:Name="Counter_value_textbox" Text="1" PreviewTextInput="Counter_value_textbox_PreviewTextInput" MinWidth="20"></TextBox>
            <xctk:ButtonSpinner Spin="ButtonSpinner_Spin"></xctk:ButtonSpinner>
        </StackPanel>
    </StackPanel>
</UserControl>
