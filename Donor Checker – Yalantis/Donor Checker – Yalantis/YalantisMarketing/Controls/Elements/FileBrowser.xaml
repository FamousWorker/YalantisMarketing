<UserControl x:Class="YalantisMarketing.Controls.Elements.FileBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YalantisMarketing.Controls.Elements"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="File_path_textbox" MinWidth="190" Style="{StaticResource Element_base_style}" Grid.Column ="0"></TextBox>
        <Button x:Name="Browse_textbox" Content="..." Style="{StaticResource Element_base_style}" Width="32" Grid.Column ="1" Click="Browse_click"></Button>
        
    </Grid>
</UserControl>
